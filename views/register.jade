extends layout

block content
  div.container
    div.row
      div.col-sm-4.col-md-4.col-md-offset-4
        .panel.panel-primary
          .panel-heading
            i.fa.fa-user.fa-3x
            |  Registration Details
          .panel-body
            form(class='form-signin', action='/signup', method='POST')
              div.form-group
                input(type='text', name='username', class='form-control js-empty-input', placeholder='Username',autocomplete='off',required, autofocus)
              div.form-group
                input(type='password', name='password', class='form-control nomargin js-empty-input', placeholder='Password',autocomplete='off', required)
              div.form-group
                input(type='email', name='email', class='form-control', placeholder='Email',autocomplete='off',required)
              div.form-group
                input(type='text', name='firstName', class='form-control', placeholder='First Name',autocomplete='off',required)
              div.form-group
                input(type='text', name='lastName', class='form-control', placeholder='Last Name',autocomplete='off',required)
              div.form-group
                button(class='btn btn-lg btn-primary btn-block', type='submit') Register
              span.clearfix
          .panel-footer
            a(href='/login', class='text-center new-account') Login